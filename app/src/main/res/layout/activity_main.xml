<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:src="@drawable/gambar2"
        android:layout_below="@id/img1"/>

    <TextView
        android:id="@+id/tv_onboard_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:text="@string/tv_onboard1"
        android:layout_below="@id/img2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_onboard_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="17sp"
        android:text="@string/tv_onboard2"
        android:layout_below="@id/tv_onboard_1"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_onboard_2"
        android:width="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/txt_btn_register"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsbold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_shape"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:width="300dp"
        android:text="@string/txt_btn_login"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsbold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_shape"/>


</RelativeLayout>