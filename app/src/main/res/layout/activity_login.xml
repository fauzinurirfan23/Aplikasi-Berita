<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_onboard_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:text="@string/title_aplikasi"
        android:layout_below="@id/img1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_onboard_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:textSize="12sp"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:text="@string/title_desc"
        android:layout_below="@id/tv_onboard_1"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/container_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_onboard_2"
        android:padding="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_shape"
            android:hint="@string/title_email"
            android:paddingLeft="20dp"
            android:backgroundTint="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_shape"
            android:hint="@string/title_pass"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape"
        android:text="@string/txt_btn_login"
        android:layout_below="@id/container_login_id"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_login_id"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_forgot_password"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/title_reset_password"
            android:textColor="@color/blueC"
            android:textSize="14dp"
            android:gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>